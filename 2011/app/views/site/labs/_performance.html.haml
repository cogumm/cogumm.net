%article.labs_project
  .project_language #{image_tag 'labs/ruby.png', :title => 'Ruby', :size => '24x24'}
  .project_image #{image_tag('labs/blank.jpg', :size => '100x100')}
  .project_info
    %h2.project_title #{link_to 'Performance', 'https://github.com/cogumm/performance', :target => :_blank}
    %h4.project_author #{link_to 'Gabriel Feitosa Vilar', 'http://github.com/cogumm', :target => :_blank}
    %p.project_description= raw t('labs.performance.desc')
