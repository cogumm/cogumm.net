  %hr
  .project_actions
    .install
      %code git clone git@github.com:cogumm/performance.git
    .action.view_source #{link_to t('labs.source'), 'https://github.com/cogumm/performance', :target => :_blank}
    .action.download #{link_to 'download', 'https://github.com/cogumm/performance/archives/master', :target => :_blank}
    .clear
